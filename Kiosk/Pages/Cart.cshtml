@page
@model Kiosk.Pages.CartModel
@using Kiosk.Extensions
@using System.Globalization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/Cart.css" />
<link rel="stylesheet" href="~/css/popup.css" />
@{
    ViewData["Title"] = Localizer["Koszyk"];
    ViewData["PageHeaderTitle"] = Localizer["Koszyk"];
    var culture = CultureInfo.CurrentUICulture;
}

<div class="cart-page">
    @if (TempData["OrderMessage"] != null)
    {
        <p class="success-message">@TempData["OrderMessage"]</p>
    }

    <div asp-validation-summary="All"></div>

    @if (Model.CartItems.Count == 0)
    {
        <div class="empty-cart">
            <p>@Localizer["Twój koszyk jest pusty."]</p>
            <a asp-page="/Menu" class="primary-btn">@Localizer["Przejdź do menu"]</a>
        </div>
    }
    else
    {
        <div class="cart-layout">
            <div class="cart-items-grid">
                @foreach (var ci in Model.CartItems)
                {
                    var ingredients = System.Text.Json.JsonSerializer.Deserialize<List<string>>(ci.Ingredients ?? "[]") ?? new List<string>();
                    var formattedIngredients = ingredients
                    .GroupBy(name => name)
                    .Select(g => g.Count() > 1 ? $"{g.Count()}x {g.Key}" : g.Key)
                    .ToList();
                    <div class="cart-card">
                        <div class="cart-card-media">
                            <img src="@ci.Item.Image" alt="@ci.Item.GetDisplayName(culture)" />
                        </div>

                        <div class="cart-card-content">
                            <div class="cart-card-header">
                                <div>
                                    <p class="item-category">@Localizer["Pozycja w koszyku"]</p>
                                    <h3>@ci.Item.GetDisplayName(culture)</h3>
                                    <p class="item-ingredients">
                                        @(formattedIngredients.Any() ? string.Join(", ", formattedIngredients) : Localizer["Domyślne składniki"])
                                    </p>
                                </div>
                            </div>

                            <div class="cart-card-footer">
                                <button type="button"
                                        class="edit-item-btn ghost-btn"
                                        data-menu-item-id="@ci.Item.Id"
                                        data-selected-ingredients="@ci.Ingredients"
                                        data-quantity="@ci.Quantity">
                                    @Localizer["Edytuj"]
                                </button>

                                <div class="quantity-control">
                                    <form method="post" asp-page-handler="Update">
                                        <input type="hidden" name="MenuItemId" value="@ci.Item.Id" />
                                        <input type="hidden" name="oldSelectedIngredients" value="@ci.Ingredients" />
                                        <input type="hidden" name="newSelectedIngredients" value="@ci.Ingredients" />
                                        <input type="hidden" name="quantity" value="@(Math.Max(1, ci.Quantity - 1))" />
                                        <button type="submit" class="qty-btn" @(ci.Quantity <= 1 ? "disabled" : null)>−</button>
                                    </form>
                                    <span class="qty-value">@ci.Quantity</span>
                                    <form method="post" asp-page-handler="Update">
                                        <input type="hidden" name="MenuItemId" value="@ci.Item.Id" />
                                        <input type="hidden" name="oldSelectedIngredients" value="@ci.Ingredients" />
                                        <input type="hidden" name="newSelectedIngredients" value="@ci.Ingredients" />
                                        <input type="hidden" name="quantity" value="@(ci.Quantity + 1)" />
                                        <button type="submit" class="qty-btn">+</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="cart-card-side">
                            <div class="price-tag">@ci.UnitPrice.ToString("0.00") zł</div>
                            <form method="post" asp-page-handler="Remove" class="inline-form">
                                <input type="hidden" name="MenuItemId" value="@ci.Item.Id" />
                                <input type="hidden" name="selectedIngredients" value="@ci.Ingredients" />
                                <button type="submit" class="remove-btn">@Localizer["Usuń"]</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
            <div class="payment-box">
                <div class="cart-summary-card">
                    <h4>@Localizer["Podsumowanie"]</h4>
                    <div class="summary-row">
                        <span>@Localizer["Suma częściowa"]</span>
                        <span>@Model.TotalPrice.ToString("0.00") zł</span>
                    </div>
                    <div class="summary-row muted">
                        <span>@Localizer["Podatek"]</span>
                        <span>0,00 zł</span>
                    </div>
                    <div class="summary-row total">
                        <span>@Localizer["Łącznie"]</span>
                        <span>@Model.TotalPrice.ToString("0.00") zł</span>
                    </div>
                    <form method="post" asp-page-handler="Checkout">
                        <button type="submit" class="btn primary pill full-width checkout-btn">@Localizer["Zapłać"]</button>
                    </form>

                    <a asp-page="/Menu" class="btn danger back-btn">@Localizer["Wróć do menu"]</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- POPUP EDYCJI PRODUKTU W KOSZYKU -->
<div id="edit-item-modal" class="modal" style="display:none;">
    <div class="modal-content">
        <h3>@Localizer["Edytuj"] produkt</h3>

        <div class="edit-modal-section">
            <label>@Localizer["Ilość:"]</label>
            <div class="qty-control">
                <button type="button" id="qty-minus">−</button>
                <span id="qty-value">1</span>
                <button type="button" id="qty-plus">+</button>
            </div>
        </div>

        <div class="edit-modal-section">
            <h4>@Localizer["Składniki główne"]</h4>
            <div id="edit-default-ingredients" class="ingredients-list"></div>
        </div>

        <div class="edit-modal-section">
            <h4>@Localizer["Dodatki"]</h4>
            <div class="addon-counter">@Localizer["Wybrane dodatki:"] <span id="edit-optional-count">0/3</span></div>
            <div id="edit-optional-ingredients" class="ingredients-list"></div>
        </div>

        <form method="post" asp-page-handler="Update" id="edit-item-form">
            <input type="hidden" name="MenuItemId" id="edit-menu-item-id" />
            <input type="hidden" name="oldSelectedIngredients" id="edit-old-selected-ingredients" />
            <input type="hidden" name="newSelectedIngredients" id="edit-new-selected-ingredients" />
            <input type="hidden" name="quantity" id="edit-quantity" />

            <div class="modal-actions">
                <button type="button" id="edit-cancel">@Localizer["Anuluj"]</button>
                <button type="button" id="edit-save">@Localizer["Zapisz zmiany"]</button>
            </div>
        </form>
    </div>
</div>

<script>
    window.kioskInactivityConfig = {
        lockscreenUrl: '@Url.Page("/LockScreen")',
        idleTimeoutMs: 40000,
        promptTimeoutMs: 15000
    };
</script>
<script src="~/js/inactivity.js"></script>
<script src="~/js/IngredientCart.js">
    </script>