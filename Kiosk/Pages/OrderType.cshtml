@page
@model Kiosk.Pages.OrderTypeModel
<link rel="stylesheet" href="~/css/OrderType.css" />

@{
    ViewData["Title"] = "Rodzaj Zamówienia";
    ViewData["HidePageHeader"] = true;
}

<div class="order-type-page">
    <div class="order-type-card">
        <h1>Wybierz rodzaj zamówienia</h1>
        <p>Wskaż czy chcesz zjeść na miejscu czy zabrać zamówienie ze sobą.</p>

        <div class="order-type-buttons">
            <form method="post">
                <input type="hidden" name="orderType" value="Na miejscu" />
                <button type="submit" class="order-type-btn onsite">
                    <span class="order-type-icon" aria-hidden="true">🍽️</span>
                    <span class="order-type-label">Na miejscu</span>
                </button>
            </form>

            <form method="post">
                <input type="hidden" name="orderType" value="Na wynos" />
                <button type="submit" class="order-type-btn takeaway">
                    <span class="order-type-icon" aria-hidden="true">🛍️</span>
                    <span class="order-type-label">Na wynos</span>
                </button>
            </form>
        </div>
    </div>
</div>