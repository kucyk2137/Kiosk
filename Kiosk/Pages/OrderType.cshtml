@page
@using Kiosk.Services
@model Kiosk.Pages.OrderTypeModel
@inject LanguageService LanguageService
<link rel="stylesheet" href="~/css/OrderType.css" />

@{
    string T(string key, string fallback) => LanguageService.Translate(HttpContext, LanguageArea.Ordering, key, fallback);
    ViewData["Title"] = T("orderType.title", "Rodzaj Zamówienia");
    ViewData["HidePageHeader"] = true;
    var backgroundStyle = !string.IsNullOrEmpty(Model.BackgroundImagePath)
       ? $"--order-type-background: url('{Model.BackgroundImagePath}');"
       : string.Empty;
}

<div class="order-type-page" style="@backgroundStyle">
    <div class="order-type-card">
        <h1>@T("orderType.title", "Wybierz rodzaj zamówienia")</h1>
        <p>@T("orderType.subtitle", "Wskaż czy chcesz zjeść na miejscu czy zabrać zamówienie ze sobą.")</p>

        <div class="order-type-buttons">
            <form method="post">
                <input type="hidden" name="orderType" value="Na miejscu" />
                <button type="submit" class="order-type-btn onsite">
                    <span class="order-type-icon" aria-hidden="true">🍽️</span>
                    <span class="order-type-label">@T("orderType.eatIn", "Na miejscu")</span>
                </button>
            </form>

            <form method="post">
                <input type="hidden" name="orderType" value="Na wynos" />
                <button type="submit" class="order-type-btn takeaway">
                    <span class="order-type-icon" aria-hidden="true">🛍️</span>
                    <span class="order-type-label">@T("orderType.takeaway", "Na wynos")</span>
                </button>
            </form>
        </div>
    </div>
</div>