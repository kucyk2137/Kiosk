<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kiosk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kiosk.styles.css" asp-append-version="true" />
</head>
<body>
    @inject Kiosk.Services.SiteSettingsService SiteSettingsService
    @inject Kiosk.Services.LanguageService LanguageService
    @{
        var hideHeader = ViewData["HidePageHeader"] as bool? ?? false;
        var headerTitle = ViewData["PageHeaderTitle"] as string ?? ViewData["Title"] as string ?? "";
        var headerBackground = await SiteSettingsService.GetHeaderBackgroundAsync();
        var headerStyle = !string.IsNullOrWhiteSpace(headerBackground)
        ? $"background-image: linear-gradient(135deg, rgba(0, 0, 0, 0.65), rgba(0, 0, 0, 0.35)), url('{headerBackground}'); background-size: cover; background-position: center;"
        : string.Empty;
        var currentOrderingLanguage = LanguageService.GetLanguage(Context, Kiosk.Services.LanguageArea.Ordering);
    }

    <div class="language-switcher" data-current-language="@currentOrderingLanguage">
        <button type="button" class="language-btn" data-language="en" aria-label="Switch to English">
            <span>EN</span>
        </button>
        <button type="button" class="language-btn" data-language="de" aria-label="Wechseln zu Deutsch">
            <span>DE</span>
        </button>
    </div>

    @if (!hideHeader && !string.IsNullOrWhiteSpace(headerTitle))
    {
        <header class="page-hero @(string.IsNullOrWhiteSpace(headerBackground) ? string.Empty : "page-hero--with-image")" style="@headerStyle">
            <div class="page-hero__overlay"></div>
            <div class="page-hero__content">
                <div class="page-hero__title">@headerTitle</div>
            </div>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const switcher = document.querySelector('.language-switcher');
            if (!switcher) return;

            const current = switcher.dataset.currentLanguage || 'pl';
            switcher.querySelectorAll('.language-btn').forEach(btn => {
                if (btn.dataset.language === current) {
                    btn.classList.add('is-active');
                }

                btn.addEventListener('click', async () => {
                    const lang = btn.dataset.language;
                    if (!lang) return;

                    try {
                        await fetch(`/api/language/ordering/${lang}`, { method: 'POST' });
                        window.location.reload();
                    } catch {
                        console.warn('Language change failed');
                    }
                });
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>