<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kiosk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kiosk.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var hideHeader = ViewData["HidePageHeader"] as bool? ?? false;
        var headerTitle = ViewData["PageHeaderTitle"] as string ?? ViewData["Title"] as string ?? "";
    }

    @if (!hideHeader && !string.IsNullOrWhiteSpace(headerTitle))
    {
        <header class="page-hero">
            <div class="page-hero__overlay"></div>
            <div class="page-hero__content">
                <div class="page-hero__title">@headerTitle</div>
            </div>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>