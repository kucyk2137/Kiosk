@page
@using Kiosk.Services
@model Kiosk.Pages.PaymentModel
@inject LanguageService LanguageService
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/Payment.css" />
<link rel="stylesheet" href="~/css/site.css" />
@{
    string T(string key, string fallback) => LanguageService.Translate(HttpContext, LanguageArea.Ordering, key, fallback);
    ViewData["Title"] = T("payment.title", "Płatność");
    ViewData["PageHeaderTitle"] = T("payment.title", "Płatność");
}

<div class="payment-page" data-has-order="@(!string.IsNullOrEmpty(Model.CreatedOrderNumber)).ToString().ToLower()" data-lockscreen-url="@Url.Page("/lockscreen")">
    @if (!string.IsNullOrEmpty(Model.CreatedOrderNumber))
    {
        <div class="payment-success">
            <p class="eyebrow">@T("payment.success.eyebrow", "Dziękujemy za złożenie zamówienia")</p>
            <h1>@T("payment.success.title", "Twój numer zamówienia to")</h1>

            <div class="order-number">@Model.CreatedOrderNumber</div>

            <p class="muted">
                @T("payment.success.note", "Pokaż ten numer przy odbiorze. Zamówienie pojawi się od razu na ekranie kuchni.")
            </p>

            <div class="summary-actions" style="justify-content:center; margin-top:12px;">
                <button id="finish-btn" class="btn primary"
                        onclick="window.location.href='@Url.Page("/lockscreen")'">
                    @T("payment.success.finish", "Zakończ")
                </button>
            </div>

            <p class="muted" style="margin-top:8px;">
                @T("payment.success.autoReturn", "Za chwilę wrócimy automatycznie do ekranu startowego.")
            </p>
        </div>

    }
    else
    {
        <div class="payment-layout">
            <div class="payment-header">
                <div>
                    <p class="eyebrow">@T("payment.eyebrow", "Wybierz metodę płatności")</p>
                    <h1>@T("payment.header", "Jak chcesz zapłacić?")</h1>
                </div>
                <div class="pill">@T("payment.toPay", "Do zapłaty:") @Model.TotalPrice.ToString("0.00") zł</div>
            </div>

            <div asp-validation-summary="ModelOnly" class="validation-errors"></div>

            <form method="post">
                <input type="hidden" asp-for="SelectedPaymentMethod" />
                <div class="payment-grid">
                    <button type="button" class="payment-tile card" data-method="Karta">
                        <div class="tile-label">@T("payment.card", "Karta")</div>
                        <span class="muted">@T("payment.card.subtitle", "Płatność zbliżeniowa lub chip")</span>
                    </button>
                    <button type="button" class="payment-tile cash" data-method="Gotówka">
                        <div class="tile-label">@T("payment.cash", "Gotówka")</div>
                        <span class="muted">@T("payment.cash.subtitle", "Zapłacisz przy kasie")</span>
                    </button>
                    <button type="button" class="payment-tile blik" data-method="BLIK">
                        <div class="tile-label">BLIK</div>
                        <span class="muted">@T("payment.blik.subtitle", "Przepisz kod z aplikacji")</span>
                    </button>
                    <div class="payment-summary">
                        <p class="eyebrow">@T("payment.summary", "Podsumowanie")</p>
                        <h3>@T("payment.total", "Łącznie")</h3>
                        <div class="summary-amount">@Model.TotalPrice.ToString("0.00") zł</div>
                        <p class="muted">@T("payment.summary.subtitle", "Wybierz metodę płatności, a następnie zatwierdź zamówienie.")</p>
                        <div class="summary-actions">
                            <a asp-page="/Cart" class="btn ghost">@T("payment.backToCart", "Wróć do koszyka")</a>
                            <button type="submit" class="btn primary">@T("payment.pay", "Zapłać")</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
</div>
@section Scripts {
    <script>
        const tiles = document.querySelectorAll('.payment-tile');
        const paymentInput = document.querySelector('input[name="SelectedPaymentMethod"]');

        tiles.forEach(tile => {
            tile.addEventListener('click', () => {
                tiles.forEach(t => t.classList.remove('is-selected'));
                tile.classList.add('is-selected');
                paymentInput.value = tile.dataset.method;
            });
        });

        // AUTO-ZAMKNIĘCIE / POWRÓT PO 10 SEKUNDACH PO ZŁOŻENIU ZAMÓWIENIA
        const hasOrderNumber = '@(string.IsNullOrEmpty(Model.CreatedOrderNumber) ? "false" : "true")' === 'true';

        if (hasOrderNumber) {
            setTimeout(() => {
                const btn = document.getElementById('finish-btn');
                if (btn) {
                    btn.click(); // zadziała jak kliknięcie „Zakończ”
                } else {
                    // awaryjnie
                    window.location.href = '@Url.Page("/lockscreen")';
                }
            }, 10000); // 10 000 ms = 10 sekund
        }
    </script>
}