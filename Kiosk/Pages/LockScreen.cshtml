
@page

@model Kiosk.Pages.LockScreenModel
<link rel="stylesheet" href="~/css/LockScreen.css" />
@{
    ViewData["Title"] = Localizer["Ekran startowy"];
    ViewData["HidePageHeader"] = true;
    var backgroundStyle = !string.IsNullOrEmpty(Model.BackgroundImagePath)
        ? $"--lockscreen-background: url('{Model.BackgroundImagePath}');"
        : string.Empty;
}


<div class="lockscreen-page" style="@backgroundStyle">
    @if (!string.IsNullOrEmpty(Model.BackgroundImagePath))
    {
        <div class="lockscreen-background"></div>
    }
    <div class="lockscreen-pattern"></div>
    <div class="lockscreen-content">
        <button class="lockscreen-cta" onclick="location.href='OrderType'">@Localizer["Zacznij zamówienie"]</button>
    </div>
</div>
