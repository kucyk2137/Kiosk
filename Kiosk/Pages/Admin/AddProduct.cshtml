@page
@model AddProductModel

<h2>Dodaj produkt</h2>
<a asp-page="Categories" class="back-btn">Powrót</a>

<form method="post">
    <div>
        <label>Nazwa:</label>
        <input asp-for="MenuItem.Name" />
        <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
    </div>

    <div>
        <label>Opis:</label>
        <textarea asp-for="MenuItem.Description"></textarea>
        <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
    </div>

    <div>
        <label>Cena:</label>
        <input asp-for="MenuItem.Price" type="number" step="0.01" />
        <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
    </div>

    <div>
        <label>Obraz (URL):</label>
        <input asp-for="MenuItem.ImageUrl" />
        <span asp-validation-for="MenuItem.ImageUrl" class="text-danger"></span>
    </div>

    <div>
        <label>Kategoria:</label>
        <select asp-for="MenuItem.CategoryId" asp-items="Model.CategorySelectList">
            <option value="">-- Wybierz kategorię --</option>
        </select>
        <span asp-validation-for="MenuItem.CategoryId" class="text-danger"></span>
    </div>

    <div>
        <label>Domyślne składniki (jeden na linię):</label>
        <textarea asp-for="DefaultIngredientsInput" placeholder="np. pomidor
ogórek"></textarea>
    </div>

    <div>
        <label>Opcjonalne dodatki (jeden na linię):</label>
        <textarea asp-for="OptionalIngredientsInput" placeholder="np. bekon
sos BBQ"></textarea>
    </div>

    <button type="submit">Dodaj produkt</button>
</form>

<p style="color:green">@Model.Message</p>