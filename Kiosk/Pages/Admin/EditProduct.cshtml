@page "{id:int}"
@model Kiosk.Pages.Admin.EditProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Edytuj produkt</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div>
        <label>Nazwa:</label>
        <input asp-for="Product.Name" />
    </div>

    <div>
        <label>Kategoria:</label>
        <select asp-for="Product.CategoryId" asp-items="Model.CategorySelectList"></select>
    </div>

    <div>
        <label>Cena:</label>
        <input asp-for="Product.Price" type="number" step="0.01" />
    </div>

    <div>
        <label>Opis:</label>
        <textarea asp-for="Product.Description"></textarea>
    </div>

    <div>
        <label>URL obrazka:</label>
        <input asp-for="Product.Image" />
    </div>

    <div>
        <label>Domyślne składniki (jeden na linię):</label>
        <textarea asp-for="DefaultIngredientsInput"></textarea>
    </div>

    <div>
        <label>Opcjonalne dodatki (jeden na linię):</label>
        <textarea asp-for="OptionalIngredientsInput"></textarea>
    </div>

    <button type="submit">Zapisz zmiany</button>
    <a asp-page="Index">Powrót do listy</a>
</form>