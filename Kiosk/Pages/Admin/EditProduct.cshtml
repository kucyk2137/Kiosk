@page "{id:int}"
@model Kiosk.Pages.Admin.EditProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/admin.css" />
<div class="admin-shell">
    <div class="admin-heading">
        <div>
            <p class="eyebrow">Panel administracyjny</p>
            <h2>Edytuj produkt</h2>
            <p class="muted">Aktualizuj dane produktu, aby menu było zawsze na bieżąco.</p>
        </div>
        <div class="admin-actions">
            <a asp-page="Index" class="btn ghost">Powrót do listy</a>
        </div>
    </div>

    <div class="admin-card">
        <div class="card-heading">
            <p class="eyebrow">Edycja</p>
            <h3>@Model.Product.Name</h3>
        </div>

        <form method="post" class="admin-form">
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-grid">
                <div class="form-field">
                    <label>Nazwa</label>
                    <input asp-for="Product.Name" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>Kategoria</label>
                    <select asp-for="Product.CategoryId" asp-items="Model.CategorySelectList"></select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>Cena</label>
                    <input asp-for="Product.Price" type="number" step="0.01" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>URL obrazka</label>
                    <input asp-for="Product.Image" />
                    <span asp-validation-for="Product.Image" class="text-danger"></span>
                </div>

                <div class="form-field full-width">
                    <label>Opis</label>
                    <textarea asp-for="Product.Description" rows="3"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="form-field full-width">
                    <label>Domyślne składniki (jeden na linię)</label>
                    <textarea asp-for="DefaultIngredientsInput" rows="3"></textarea>
                </div>

                <div class="form-field full-width">
                    <label>Opcjonalne dodatki (jeden na linię)</label>
                    <textarea asp-for="OptionalIngredientsInput" rows="3"></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary">Zapisz zmiany</button>
            </div>
        </form>
    </div>
</div>