@page
@model Kiosk.Pages.Admin.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link rel="stylesheet" href="~/css/admin.css" />

<div class="admin-shell">
    <div class="admin-heading">
        <div>
            <p class="eyebrow">Panel administracyjny</p>
            <h2>Lista produktów</h2>
            <p class="muted">Dodawaj, edytuj i usuwaj pozycje menu z jednego miejsca.</p>
        </div>
        <div class="admin-actions">
            <a asp-page="AddProduct" class="btn primary">Dodaj nowy produkt</a>
            <a asp-page="Categories" class="btn ghost">Zarządzaj kategoriami</a>
            <a asp-page="AddSet" class="btn ghost">Dodaj nowy zestaw</a>
            <a asp-page="LockScreenBackground" class="btn ghost">Tło ekranu blokady</a>
            <a asp-page="HeaderBackground" class="btn ghost">Ustaw tło nagłówka</a>
        </div>
    </div>
    <div class="admin-card">
        <div class="card-heading">
            <div>
                <p class="eyebrow">Polecenia</p>
                <h3>Polecane produkty</h3>
            </div>
        </div>

        @if (Model.RecommendedMenuItems.Any())
        {
            <ul class="recommended-list">
                @foreach (var item in Model.RecommendedMenuItems)
                {
                    <li class="recommended-row">
                        <div>
                            <div class="cell-title">@item.Name</div>
                            <p class="muted">@item.Category?.Name</p>
                        </div>
                        <form method="post" asp-page-handler="RemoveRecommended" class="inline-form">
                            <input type="hidden" name="menuItemId" value="@item.Id" />
                            <button type="submit" class="btn danger">Usuń</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="muted">Nie dodano jeszcze żadnych produktów polecanych.</p>
        }

        <form method="post" asp-page-handler="AddRecommended" class="admin-form compact">
            <div class="form-grid">
                <div class="form-field">
                    <label for="recommended-select">Dodaj produkt do polecanych</label>
                    <select id="recommended-select" name="menuItemId" required>
                        <option value="">Wybierz produkt</option>
                        @foreach (var item in Model.AvailableForRecommendation)
                        {
                            <option value="@item.Id">@item.Name (@item.Category?.Name)</option>
                        }
                    </select>
                </div>
            </div>
            <button type="submit" class="btn primary full-width">Dodaj do polecanych</button>
        </form>
    </div>
    <div class="admin-card">
        <div class="card-heading">
            <div>
                <p class="eyebrow">Menu</p>
                <h3>Aktualne produkty</h3>
            </div>
        </div>

        <table class="admin-table">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Kategoria</th>
                    <th>Cena</th>
                    <th class="text-right">Opcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MenuItems)
                {
                    <tr>
                        <td>
                            <div class="cell-title">@item.Name</div>
                            <p class="muted">@item.Description</p>
                        </td>
                        <td>@item.Category.Name</td>
                        <td>@item.Price.ToString("0.00") zł</td>
                        <td class="text-right">
                            <div class="table-actions">
                                <a asp-page="EditProduct" asp-route-id="@item.Id" class="btn ghost">Edytuj</a>
                                <form method="post" asp-page-handler="Delete" class="inline-form">
                                    <input type="hidden" name="MenuItemId" value="@item.Id" />
                                    <button type="submit" class="btn danger">Usuń</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
