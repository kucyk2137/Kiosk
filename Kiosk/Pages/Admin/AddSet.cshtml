@page
@model Kiosk.Pages.Admin.AddSetModel
@using Kiosk.Extensions
@using System.Globalization
<link rel="stylesheet" href="~/css/admin.css" />
@{
    var culture = CultureInfo.CurrentUICulture;
}
<div class="admin-shell">
    <div class="admin-heading">
        <div>
            <p class="eyebrow">@Localizer["Panel administracyjny"]</p>
            <h2>@Localizer["Dodaj zestaw"]</h2>
            <p class="muted">@Localizer["Połącz dostępne produkty w atrakcyjny zestaw."]</p>
        </div>
        <div class="admin-actions">
            <a asp-page="Categories" class="btn outline">@Localizer["Zarządzaj kategoriami"]</a>
            <a asp-page="Index" class="btn ghost">@Localizer["Powrót"]</a>
        </div>
    </div>

    <div class="admin-card">
        <div class="card-heading">
            <p class="eyebrow">@Localizer["Szczegóły zestawu"]</p>
            <h3>@Localizer["Nowa kompozycja"]</h3>
        </div>

        <form method="post" enctype="multipart/form-data" class="admin-form">
            <div class="form-grid">
                <div class="form-field">
                    <label>@Localizer["Nazwa zestawu (PL)"]</label>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>@Localizer["Cena zestawu"]</label>
                    <input asp-for="Price" type="number" step="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>@Localizer["Obraz (opcjonalnie)"]</label>
                    <input asp-for="ImageFile" type="file" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-field full-width">
                    <label>@Localizer["Opis (PL)"]</label>
                    <textarea asp-for="Description" rows="3" placeholder="@Localizer["Opisz zestaw lub pozostaw puste aby wygenerować listę produktów."]"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label>@Localizer["Nazwa zestawu (EN)"]</label>
                    <input asp-for="NameEn" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>

                <div class="form-field full-width">
                    <label>@Localizer["Opis (EN)"]</label>
                    <textarea asp-for="DescriptionEn" rows="3" placeholder="@Localizer["Opisz zestaw po angielsku lub pozostaw puste aby wygenerować listę produktów."]"></textarea>
                    <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                </div>

                <div class="form-field full-width">
                    <label>@Localizer["Produkty w zestawie (minimum 2)"]</label>
                    <div class="checkbox-grid">
                        @foreach (var product in Model.AvailableProducts)
                        {
                            <label class="checkbox-row">
                                <input type="checkbox" name="SelectedProductIds" value="@product.Id" @(Model.SelectedProductIds.Contains(product.Id) ? "checked" : string.Empty) />
                                <span>
                                    <strong>@product.GetDisplayName(culture)</strong>
                                    <small class="muted">@product.Category?.GetDisplayName(culture)</small>
                                </span>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="SelectedProductIds" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn primary">@Localizer["Dodaj zestaw"]</button>
                @if (!string.IsNullOrWhiteSpace(Model.Message))
                {
                    <p class="success">@Model.Message</p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Error))
                {
                    <p class="text-danger">@Model.Error</p>
                }
            </div>
        </form>
    </div>
</div>